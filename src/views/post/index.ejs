<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <%- include('../layouts/style') %>
  </head>
  <body>
    <%- include('../layouts/navbar') %>
    <!-- Content -->
    <div class="container py-3">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <% for(let post of posts){ %>
            <div class="col-md-6">
              <div class="card mb-3">
                <div class="card-body h-100">
                  <h3 class="mb-3"><%= post.title %></h3>
                  <a href="/blog/<%= post.slug %>" class="btn btn-primary">Read</a>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <!-- Content -->
    <%- include('../layouts/script') %>
  </body>
</html>
